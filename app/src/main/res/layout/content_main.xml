<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.weaver.eric.acremote.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/key_power"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Power"/>
    <Button
        android:id="@+id/key_up"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="Warmer"
        android:layout_above="@+id/key_left"
        android:layout_toStartOf="@+id/key_right" />
    <Button
        android:id="@+id/key_down"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="Cooler"
        android:layout_below="@+id/key_right"
        android:layout_toEndOf="@+id/key_left" />
    <Button
        android:id="@+id/key_left"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="Slower"
        android:layout_above="@+id/key_down"
        android:layout_toStartOf="@+id/key_up" />
    <Button
        android:id="@+id/key_right"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="Faster"
        android:layout_marginTop="98dp"
        android:layout_marginEnd="31dp"
        android:layout_below="@+id/power"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
